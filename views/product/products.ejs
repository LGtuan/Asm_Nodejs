<!-- Modal edit -->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
  data-backdrop="static"
  data-keyboard="false"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Chỉnh sửa thông tin sản phẩm</h5>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="form-group col-md-6">
            <label class="control-label">Tên sản phẩm</label>
            <input
              class="form-control"
              type="text"
              required
              id="inputNameProduct"
            />
          </div>
          <div class="form-group col-md-6">
            <label class="control-label">Số lượng</label>
            <input
              class="form-control"
              type="number"
              required
              id="inputQuailityProduct"
            />
          </div>
          <div class="form-group col-md-6 mt-3">
            <label class="control-label">Giá bán</label>
            <input
              class="form-control"
              type="text"
              required
              id="inputPriceProduct"
            />
          </div>
          <div class="form-group col-md-6 mt-3">
            <label for="exampleSelect1" class="control-label">Danh mục</label>
            <select class="form-control" id="exampleSelect1">
              <option>Truyện tranh</option>
              <option>Manga</option>
              <option>Manhua</option>
              <option>Truyện chữ</option>
            </select>
          </div>
          <div class="form-group mt-3">
            <label class="control-label">Nội dung</label>
            <textarea class="form-control" style="height: 100px"></textarea>
          </div>
          <div class="form-group col-md-6 mt-3">
            <label class="control-label">Hình ảnh</label>
            <input id="productImg" class="form-control" type="file" />
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-save" type="button">Lưu lại</button>
        <button class="btn btn-cancel" data-bs-dismiss="modal" type="button">
          Hủy bỏ
        </button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  role="dialog"
  aria-hidden="true"
  data-backdrop="static"
  data-keyboard="false"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5>Bạn có chắc muốn xóa sản phẩm này không</h5>
      </div>
      <div class="modal-footer">
        <button class="btn btn-delete" type="button">Xóa</button>
        <button class="btn btn-cancel" data-bs-dismiss="modal" type="button">
          Hủy bỏ
        </button>
      </div>
    </div>
  </div>
</div>

